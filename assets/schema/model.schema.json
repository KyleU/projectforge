{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://projectforge.dev/schemas/model.schema.json",
  "title": "Model",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "package": {
      "type": "string"
    },
    "group": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "description": {
      "type": "string"
    },
    "icon": {
      "type": "string"
    },
    "ordering": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "column": {
            "type": "string"
          },
          "asc": {
            "type": "boolean"
          }
        }
      }
    },
    "search": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "history": {
      "type": "string"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "title": {
      "type": "string"
    },
    "proper": {
      "type": "string"
    },
    "route": {
      "type": "string"
    },
    "config": {
      "type": "object"
    },
    "columns": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/column"
      }
    },
    "relations": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/relation"
      }
    },
    "indexes": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/index"
      }
    }
  },
  "required": [
    "name"
  ],
  "$defs": {
    "column": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "type": {},
        "pk": {
          "type": "boolean"
        },
        "nullable": {
          "type": "boolean"
        },
        "search": {
          "type": "boolean"
        },
        "sqlDefault": {
          "type": "string"
        },
        "indexed": {
          "type": "boolean"
        },
        "display": {
          "type": "string"
        },
        "format": {
          "type": "string"
        },
        "values": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "helpString": {
          "type": "string"
        }
      }
    },
    "relation": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "src": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "table": {
          "type": "string"
        },
        "tgt": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "index": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "decl": {
          "type": "string"
        }
      }
    }
  }
}
