{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,{{{ if .HasModule "user" }}}
    "jsx": "react",
    "jsxFactory": "JSX",{{{ end }}}
    "listFiles": false,
    "module": "none",
    "noImplicitAny": true,
    "outFile": "../assets/{{{ .Key }}}.js",
    "removeComments": false,
    "preserveConstEnums": true,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES6"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
